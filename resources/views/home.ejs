<section class="hero py-8 ">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2 ">
      <h6 class="text-lg"><i>Are you Hungry?</i></h6>
      <h2 class="text-3xl md:text-6xl font-bold">Don't Wait!</h2>
      <div class="order-now w-1/4 text-center rounded-full btn btn-primary  ">Order Now</div>
    </div>
    <div class=" w-3/6">
      <img
        class="bg-cover rounded-full"
        width="450px"
        src="/img/hero-pizza.jpg"
        alt=""
      />
    </div>
  </div>
</section>

<section class="menu container mx-auto py-8">
  <h2 class="text-xl font-bold mb-8">All Pizzas</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-12">


    <% pizzas.forEach(function(pizza){  %>

    
    <div class="w-full md:w-64">
      <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image %>" alt="pizza" />

      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
        <span class=" size py-1 px-5 rounded-full text-xs"><%= pizza.size %></span>
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">Rs <%= pizza.price %></span>
          <button data-pizza='<%= JSON.stringify(pizza) %>'
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-2">add</span>
          </button>
        </div>
      </div>
    </div>

    <%  }) %>
  
  </div>
</section>